<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.bookSys.mapper.LoanRecordsMapper">
    
    <resultMap type="LoanRecords" id="LoanRecordsResult">
        <result property="recordId"    column="record_id"    />
        <result property="bookId"    column="book_id"    />
        <result property="userId"    column="user_id"    />
        <result property="loanDate"    column="loan_date"    />
        <result property="dueDate"    column="due_date"    />
        <result property="returned"    column="returned"    />
    </resultMap>

    <sql id="selectLoanRecordsVo">
        select record_id, book_id, user_id, loan_date, due_date, returned from loan_records
    </sql>

    <select id="selectLoanRecordsList" parameterType="LoanRecords" resultMap="LoanRecordsResult">
        <include refid="selectLoanRecordsVo"/>
        <where>  
            <if test="bookId != null "> and book_id = #{bookId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>
    
    <select id="selectLoanRecordsByRecordId" parameterType="Long" resultMap="LoanRecordsResult">
        <include refid="selectLoanRecordsVo"/>
        where record_id = #{recordId}
    </select>

    <insert id="insertLoanRecords" parameterType="LoanRecords" useGeneratedKeys="true" keyProperty="recordId">
        insert into loan_records
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookId != null">book_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="loanDate != null">loan_date,</if>
            <if test="dueDate != null">due_date,</if>
            <if test="returned != null">returned,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookId != null">#{bookId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="loanDate != null">#{loanDate},</if>
            <if test="dueDate != null">#{dueDate},</if>
            <if test="returned != null">#{returned},</if>
         </trim>
    </insert>

    <update id="updateLoanRecords" parameterType="LoanRecords">
        update loan_records
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookId != null">book_id = #{bookId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="loanDate != null">loan_date = #{loanDate},</if>
            <if test="dueDate != null">due_date = #{dueDate},</if>
            <if test="returned != null">returned = #{returned},</if>
        </trim>
        where record_id = #{recordId}
    </update>

    <delete id="deleteLoanRecordsByRecordId" parameterType="Long">
        delete from loan_records where record_id = #{recordId}
    </delete>

    <delete id="deleteLoanRecordsByRecordIds" parameterType="String">
        delete from loan_records where record_id in 
        <foreach item="recordId" collection="array" open="(" separator="," close=")">
            #{recordId}
        </foreach>
    </delete>
</mapper>